<div class="my-3 p-3 bg-white rounded box-shadow">
  <h6 class="border-bottom border-gray pb-2 mb-0">Tasks corresponding:</h6> 
  <% if @tasks.size == 0 %>
    <p>No tasks corresponding to your search</p>
  <% end %>
  
  <% @tasks.each do |task| %>
    <div class="media text-muted pt-3">
      <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
        <strong class="d-block text-gray-dark"><%= task.name.capitalize %></strong>  
        in the list: <%= link_to task.list.name, list_tasks_path(task.list_id) %>
      </p>
    </div>
  <% end %>
</div>
  <small class="d-block text-right mt-3">
    <%= link_to 'Home', root_path, class: "secondary-pages-lower-texts" %>
  </small>
</div>