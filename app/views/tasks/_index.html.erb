<p class="main_title"><%= link_to 'New Task', new_list_task_path, class: "secondary-pages-links" %>
<br>
<%= link_to 'Give list access to a friend', new_list_list_access_path(@list), class: "secondary-pages-links" %></p>

<div class="my-3 p-3 bg-white rounded box-shadow">
  <h6 class="border-bottom border-gray pb-2 mb-0"><%= @list.name %></h6> 
  <% if @tasks.size == 0 %>
    <p>No tasks in this list</p>
  <% end %>
  
  <% @tasks.each do |task| %>
    <div class="media text-muted pt-3">
      <img data-src="holder.js/32x32?theme=thumb&amp;bg=007bff&amp;fg=007bff&amp;size=1" alt="32x32" class="mr-2 rounded" style="width: 30px; height: 30px;" src="data:image/svg+xml;charset=UTF-8,%3Csvg%20width%3D%2232%22%20height%3D%2232%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20viewBox%3D%220%200%2032%2032%22%20preserveAspectRatio%3D%22none%22%3E%3Cdefs%3E%3Cstyle%20type%3D%22text%2Fcss%22%3E%23holder_16d2a9b8577%20text%20%7B%20fill%3A%23007bff%3Bfont-weight%3Abold%3Bfont-family%3AArial%2C%20Helvetica%2C%20Open%20Sans%2C%20sans-serif%2C%20monospace%3Bfont-size%3A2pt%20%7D%20%3C%2Fstyle%3E%3C%2Fdefs%3E%3Cg%20id%3D%22holder_16d2a9b8577%22%3E%3Crect%20width%3D%2232%22%20height%3D%2232%22%20fill%3D%22%23007bff%22%3E%3C%2Frect%3E%3Cg%3E%3Ctext%20x%3D%2212.2890625%22%20y%3D%2216.9%22%3E32x32%3C%2Ftext%3E%3C%2Fg%3E%3C%2Fg%3E%3C%2Fsvg%3E" data-holder-rendered="true">
      <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
        <strong class="d-block text-gray-dark"><%= "#{task.name.capitalize}, #{task.duration}" %> mins</strong>
        <%= task.description %>
        created on: <%= task.created_at.strftime("%b %d at %I:%M %p") %>
        <% if task.done %>
          done on: <%= task.done_at.strftime("%b %d at %I:%M %p") %>
        <% else %>
          <%= link_to 'Mark as done', mark_as_done_list_task_path(@list, task), class: "secondary-pages-links " %>
        <% end %>
        <%= link_to 'Edit', edit_list_task_path(@list, task), class: "secondary-pages-links" %>
        <%= link_to 'Destroy', list_task_path(@list, task), method: :delete, data: { confirm: 'Are you sure?' }, class: "secondary-pages-links" %>
      </p>
    </div>
  <% end %>
</div>
  <small class="d-block text-right mt-3">
    <%= link_to 'Back', lists_path, class: "secondary-pages-lower-texts" %>
  </small>
</div>