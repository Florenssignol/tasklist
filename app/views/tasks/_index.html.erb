<body>
<div class="main_text">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Duration</th>
        <th scope="col">Description</th>
        <th scope="col">Created at</th>
        <th scope="col">Done at</th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
    <% if @tasks.size == 0 %>
      <tr>
        <td colspan="6">No tasks in this list</td>
      </tr> 
    <% end %>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.duration %></td>
        <td><%= task.description %></td>
        <td><%= task.created_at.strftime("%b %d at %I:%M %p") %></td>
        <% if task.done %>
          <td><%= task.done_at.strftime("%b %d at %I:%M %p") %></td>
        <% else %>
          <td class="secondary-pages-title-links "><%= link_to 'Mark as done', mark_as_done_list_task_path(@list, task), class: "secondary-pages-title-links " %></td>
        <% end %>
        <td class="secondary-pages-links"><%= link_to 'Edit', edit_list_task_path(@list, task), class: "secondary-pages-links" %></td>
        <td class="secondary-pages-links"><%= link_to 'Destroy', list_task_path(@list, task), method: :delete, data: { confirm: 'Are you sure?' }, class: "secondary-pages-links" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <br>
<p class="secondary-pages-lower-texts"><%= link_to 'New Task', new_list_task_path, class: "secondary-pages-lower-texts" %></p>
<p class="secondary-pages-lower-texts"><%= link_to 'Back', lists_path, class: "secondary-pages-lower-texts" %></p>
</div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>



