<div class="content">
    <h1 class="main_title">Your Lists</h1>
    <p class="main_title"><%= link_to 'Create a new list', new_list_path%></p>
  <br>
  <div class="container marketing">
    <div class="row">
      <% @lists.each do |list| %>
        <div class="col-lg-4">
          <div class="sub-texts">
            <%= image_tag "https://source.unsplash.com/random/" + list.name %>
            <h2><%= list.name.capitalize %></h2>
            <p><%= list.percentage_done %> % done </p>
            <p><%= list.description&.capitalize %></p>
            <p><%= link_to "View details »", list_tasks_path(list), class: "btn btn-secondary" %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <br>
  <% if current_user.list_accesses.count >= 1 %>
    <h2 class="secondary_title">Lists shared with you</h2>
    <div class="container marketing">
    <div class="row">
      <% current_user.list_accesses.each do |list_access| %>
        <div class="col-lg-4">
          <div class="sub-texts">
            <svg class="bd-placeholder-img rounded-circle" width="100" height="100" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: 140x140"><title>Placeholder</title><rect width="100%" height="100%" fill="#777"></rect><text x="50%" y="50%" fill="#777" dy=".3em">140x140</text></svg>
            <h2><%= list_access.list.name.capitalize %></h2>
            <p><%= list_access.list.percentage_done%> % done </p>
            <p><%= list_access.list.description&.capitalize %></p>
            <p><%= link_to "View details »", list_tasks_path(list_access.list), class: "btn btn-secondary" %></p>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
  <br>
</div>